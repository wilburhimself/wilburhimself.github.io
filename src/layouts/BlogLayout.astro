---
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title ? `${title} - Wilbur Suero` : "Wilbur Suero"}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@300;400;500;700&family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <style>
      /* Cyberpunk-Techie Design with White Base & Artistic Elements */
      :root {
        /* Cyberpunk Color Palette - White Base */
        --bg-primary: #ffffff;
        --bg-secondary: #f8fafc;
        --bg-tertiary: #f1f5f9;
        --bg-accent: #0f172a;
        --bg-glass: rgba(255, 255, 255, 0.8);
        --bg-code: #1e293b;
        
        /* Text Colors */
        --text-primary: #0f172a;
        --text-secondary: #475569;
        --text-muted: #64748b;
        --text-inverse: #ffffff;
        
        /* Cyberpunk Accents */
        --cyber-neon: #00ffff;
        --cyber-pink: #ff0080;
        --cyber-purple: #8b5cf6;
        --cyber-green: #00ff41;
        --cyber-orange: #ff6b35;
        --cyber-blue: #0ea5e9;
        
        /* Basquiat/Warhol Inspired Accents */
        --art-yellow: #fbbf24;
        --art-red: #ef4444;
        --art-blue: #3b82f6;
        --art-black: #000000;
        
        /* Borders & Effects */
        --border-light: #e2e8f0;
        --border-medium: #cbd5e1;
        --border-dark: #475569;
        --shadow-glow: 0 0 20px rgba(0, 255, 255, 0.3);
        --shadow-card: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
        --shadow-hover: 0 10px 25px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
        
        /* Typography */
        --font-mono: 'JetBrains Mono', 'Fira Code', 'Consolas', monospace;
        --font-sans: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
        --font-size-xs: 0.75rem;
        --font-size-sm: 0.875rem;
        --font-size-base: 1rem;
        --font-size-lg: 1.125rem;
        --font-size-xl: 1.25rem;
        --font-size-2xl: 1.5rem;
        --font-size-3xl: 1.875rem;
        --font-size-4xl: 2.25rem;
        --font-size-5xl: 3rem;
        --font-weight-light: 300;
        --font-weight-normal: 400;
        --font-weight-medium: 500;
        --font-weight-semibold: 600;
        --font-weight-bold: 700;
        --font-weight-extrabold: 800;
        --line-height-tight: 1.25;
        --line-height-snug: 1.375;
        --line-height-normal: 1.5;
        --line-height-relaxed: 1.625;
        
        /* Spacing */
        --space-1: 0.25rem;
        --space-2: 0.5rem;
        --space-3: 0.75rem;
        --space-4: 1rem;
        --space-5: 1.25rem;
        --space-6: 1.5rem;
        --space-8: 2rem;
        --space-10: 2.5rem;
        --space-12: 3rem;
        --space-16: 4rem;
        --space-20: 5rem;
        
        /* Border Radius */
        --radius-sm: 0.125rem;
        --radius-md: 0.375rem;
        --radius-lg: 0.5rem;
        --radius-xl: 0.75rem;
        --radius-2xl: 1rem;
        --radius-full: 9999px;
      }
      
      /* Reset & Base */
      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }
      
      *::before,
      *::after {
        box-sizing: border-box;
      }
      
      html {
        scroll-behavior: smooth;
      }
      
      body {
        font-family: var(--font-sans);
        font-size: var(--font-size-base);
        font-weight: var(--font-weight-normal);
        line-height: var(--line-height-normal);
        color: var(--text-primary);
        background: var(--bg-primary);
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        overflow-x: hidden;
        position: relative;
      }
      
      /* Cyberpunk background effects */
      body::before {
        content: '';
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: 
          radial-gradient(circle at 20% 80%, rgba(0, 255, 255, 0.05) 0%, transparent 50%),
          radial-gradient(circle at 80% 20%, rgba(139, 92, 246, 0.05) 0%, transparent 50%),
          radial-gradient(circle at 40% 40%, rgba(255, 0, 128, 0.03) 0%, transparent 50%);
        pointer-events: none;
        z-index: -1;
      }
      
      /* Container */
      .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 var(--space-6);
        position: relative;
        z-index: 1;
      }
      
      /* Header - Cyberpunk Style */
      header {
        padding: var(--space-8) 0;
        border-bottom: 2px solid transparent;
        background: linear-gradient(90deg, var(--cyber-neon), var(--cyber-purple), var(--cyber-pink)) bottom/100% 2px no-repeat;
        position: relative;
      }
      
      header::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: var(--bg-glass);
        backdrop-filter: blur(10px);
        z-index: -1;
      }
      
      .header-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
        position: relative;
      }
      
      .site-title {
        font-family: var(--font-mono);
        font-size: var(--font-size-3xl);
        font-weight: var(--font-weight-extrabold);
        letter-spacing: -0.02em;
        position: relative;
        text-transform: uppercase;
      }
      
      .site-title a {
        text-decoration: none;
        color: var(--text-primary);
        position: relative;
        display: inline-block;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      }
      
      .site-title a::before {
        content: '> ';
        color: var(--cyber-neon);
        font-weight: var(--font-weight-normal);
        animation: blink 2s infinite;
      }
      
      .site-title a::after {
        content: '';
        position: absolute;
        bottom: -4px;
        left: 0;
        width: 0;
        height: 3px;
        background: linear-gradient(90deg, var(--cyber-neon), var(--cyber-pink));
        transition: width 0.3s ease;
      }
      
      .site-title a:hover::after {
        width: 100%;
      }
      
      .site-title a:hover {
        text-shadow: 0 0 10px var(--cyber-neon);
        transform: translateY(-2px);
      }
      
      /* Navigation - Techie Style */
      nav ul {
        display: flex;
        list-style: none;
        gap: var(--space-8);
        align-items: center;
      }
      
      nav a {
        text-decoration: none;
        color: var(--text-secondary);
        font-family: var(--font-mono);
        font-size: var(--font-size-sm);
        font-weight: var(--font-weight-medium);
        padding: var(--space-3) var(--space-4);
        border: 1px solid var(--border-light);
        border-radius: var(--radius-md);
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        background: var(--bg-secondary);
      }
      
      nav a::before {
        content: '[';
        color: var(--cyber-purple);
      }
      
      nav a::after {
        content: ']';
        color: var(--cyber-purple);
      }
      
      nav a:hover {
        border-color: var(--cyber-neon);
        color: var(--text-primary);
        box-shadow: 0 0 15px rgba(0, 255, 255, 0.3);
        transform: translateY(-2px);
      }
      
      nav a.current {
        color: var(--cyber-neon);
        border-color: var(--cyber-neon);
        box-shadow: 0 0 10px rgba(0, 255, 255, 0.2);
      }
      
      @keyframes blink {
        0%, 50% { opacity: 1; }
        51%, 100% { opacity: 0; }
      }
      
      /* Main content */
      main {
        padding: var(--space-16) 0;
        position: relative;
      }
      
      /* Typography - Cyberpunk meets Art */
      h1, h2, h3, h4, h5, h6 {
        font-family: var(--font-sans);
        font-weight: var(--font-weight-bold);
        line-height: var(--line-height-tight);
        letter-spacing: -0.02em;
        margin-bottom: var(--space-6);
        position: relative;
      }
      
      h1 {
        font-size: var(--font-size-5xl);
        font-weight: var(--font-weight-extrabold);
        margin-bottom: var(--space-8);
        position: relative;
        display: inline-block;
        text-transform: uppercase;
        background: linear-gradient(135deg, var(--text-primary), var(--cyber-purple), var(--cyber-neon));
        background-clip: text;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-size: 200% 200%;
        animation: gradient-shift 3s ease-in-out infinite;
      }
      
      h1::before {
        content: '// ';
        color: var(--cyber-green);
        font-family: var(--font-mono);
        font-weight: var(--font-weight-normal);
        font-size: var(--font-size-lg);
        position: absolute;
        left: -3rem;
        top: 0;
      }
      
      h1::after {
        content: '';
        position: absolute;
        bottom: -8px;
        left: 0;
        width: 100%;
        height: 4px;
        background: linear-gradient(90deg, var(--art-yellow), var(--art-red), var(--art-blue));
        transform: scaleX(0);
        transform-origin: left;
        animation: underline-expand 1s ease-out 0.5s forwards;
      }
      
      h2 {
        font-size: var(--font-size-3xl);
        margin-top: var(--space-12);
        position: relative;
        display: inline-block;
        color: var(--text-primary);
      }
      
      h2::before {
        content: '## ';
        color: var(--cyber-pink);
        font-family: var(--font-mono);
        font-weight: var(--font-weight-normal);
      }
      
      h2::after {
        content: '';
        position: absolute;
        bottom: -4px;
        left: 0;
        width: 60px;
        height: 3px;
        background: var(--cyber-neon);
        box-shadow: 0 0 10px var(--cyber-neon);
      }
      
      h3 {
        font-size: var(--font-size-xl);
        color: var(--text-primary);
        margin-top: var(--space-8);
      }
      
      h3::before {
        content: '### ';
        color: var(--cyber-purple);
        font-family: var(--font-mono);
        font-weight: var(--font-weight-normal);
      }
      
      @keyframes gradient-shift {
        0%, 100% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
      }
      
      @keyframes underline-expand {
        from { transform: scaleX(0); }
        to { transform: scaleX(1); }
      }
      
      p {
        margin-bottom: var(--space-4);
        color: var(--text-secondary);
        line-height: var(--line-height-relaxed);
        font-size: var(--font-size-base);
      }
      
      /* Styled links - Cyberpunk aesthetic */
      a {
        color: var(--cyber-blue);
        text-decoration: none;
        position: relative;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        border-bottom: 1px solid transparent;
      }
      
      a::before {
        content: '';
        position: absolute;
        bottom: -2px;
        left: 0;
        width: 0;
        height: 2px;
        background: linear-gradient(90deg, var(--cyber-neon), var(--cyber-pink));
        transition: width 0.3s ease;
      }
      
      a:hover {
        color: var(--cyber-neon);
        text-shadow: 0 0 5px var(--cyber-neon);
      }
      
      a:hover::before {
        width: 100%;
      }
      
      /* Posts grid - Cyberpunk Cards with Basquiat/Warhol elements */
      .posts {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(380px, 1fr));
        gap: var(--space-8);
        margin-top: var(--space-12);
      }
      
      .post-link {
        display: block;
        text-decoration: none;
        color: inherit;
        padding: var(--space-8);
        border-radius: var(--radius-xl);
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        border: 2px solid var(--border-light);
        position: relative;
        overflow: hidden;
        background: var(--bg-secondary);
        backdrop-filter: blur(10px);
      }
      
      .post-link::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(135deg, 
          rgba(0, 255, 255, 0.05) 0%, 
          rgba(139, 92, 246, 0.05) 50%, 
          rgba(255, 0, 128, 0.05) 100%);
        opacity: 0;
        transition: opacity 0.3s ease;
        z-index: -1;
      }
      
      .post-link::after {
        content: '';
        position: absolute;
        top: var(--space-4);
        right: var(--space-4);
        width: 8px;
        height: 8px;
        background: var(--cyber-green);
        border-radius: 50%;
        box-shadow: 0 0 10px var(--cyber-green);
        animation: pulse 2s infinite;
      }
      
      .post-link:hover {
        border-color: var(--cyber-neon);
        transform: translateY(-8px) scale(1.02);
        box-shadow: var(--shadow-hover), 0 0 30px rgba(0, 255, 255, 0.2);
      }
      
      .post-link:hover::before {
        opacity: 1;
      }
      
      .post-link:hover .post-title {
        color: var(--cyber-neon);
        text-shadow: 0 0 10px rgba(0, 255, 255, 0.3);
      }
      
      /* Basquiat-inspired accent bars */
      .post-link:nth-child(3n+1)::before {
        background: linear-gradient(135deg, 
          rgba(251, 191, 36, 0.1) 0%, 
          rgba(239, 68, 68, 0.1) 100%);
      }
      
      .post-link:nth-child(3n+2)::before {
        background: linear-gradient(135deg, 
          rgba(59, 130, 246, 0.1) 0%, 
          rgba(139, 92, 246, 0.1) 100%);
      }
      
      .post-title {
        font-size: var(--font-size-xl);
        font-weight: var(--font-weight-bold);
        margin-bottom: var(--space-3);
        letter-spacing: -0.01em;
        color: var(--text-primary);
        transition: all 0.3s ease;
        line-height: var(--line-height-snug);
      }
      
      .post-meta {
        color: var(--text-muted);
        font-family: var(--font-mono);
        font-size: var(--font-size-xs);
        margin-bottom: var(--space-4);
        text-transform: uppercase;
        letter-spacing: 0.1em;
        position: relative;
      }
      
      .post-meta::before {
        content: '> ';
        color: var(--cyber-purple);
      }
      
      .post-excerpt {
        color: var(--text-secondary);
        font-size: var(--font-size-sm);
        line-height: var(--line-height-relaxed);
        position: relative;
      }
      
      @keyframes pulse {
        0%, 100% { 
          opacity: 1; 
          transform: scale(1);
        }
        50% { 
          opacity: 0.5; 
          transform: scale(1.2);
        }
      }
      
      /* Individual post */
      .post-header {
        margin-bottom: var(--space-16);
        padding-bottom: var(--space-8);
        border-bottom: 2px solid var(--border-light);
      }
      
      .post-title-single {
        font-size: var(--font-size-4xl);
        margin-bottom: var(--space-4);
        letter-spacing: -0.02em;
        position: relative;
        display: inline-block;
        color: var(--text-primary);
      }
      
      .post-title-single::before {
        content: '// ';
        color: var(--cyber-green);
        font-family: var(--font-mono);
        font-weight: var(--font-weight-normal);
        font-size: var(--font-size-lg);
      }
      
      .post-title-single::after {
        content: '';
        position: absolute;
        bottom: -8px;
        left: 0;
        width: 120px;
        height: 4px;
        background: linear-gradient(90deg, var(--art-yellow), var(--art-red));
      }
      
      .post-date {
        color: var(--text-muted);
        font-family: var(--font-mono);
        font-size: var(--font-size-sm);
        margin-bottom: var(--space-8);
        text-transform: uppercase;
        letter-spacing: 0.1em;
      }
      
      .post-date::before {
        content: '> ';
        color: var(--cyber-purple);
      }
      
      /* Footer - Cyberpunk Style */
      footer {
        padding: var(--space-16) 0;
        margin-top: var(--space-20);
        border-top: 2px solid transparent;
        background: linear-gradient(90deg, var(--cyber-purple), var(--cyber-neon), var(--cyber-pink)) top/100% 2px no-repeat;
        text-align: center;
        position: relative;
      }
      
      footer::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: var(--bg-tertiary);
        z-index: -1;
      }
      
      footer p {
        margin-bottom: var(--space-4);
        color: var(--text-secondary);
        font-size: var(--font-size-sm);
      }
      
      footer a {
        color: var(--cyber-blue);
        font-family: var(--font-mono);
        font-weight: var(--font-weight-medium);
        text-transform: uppercase;
        letter-spacing: 0.05em;
        padding: var(--space-2) var(--space-3);
        border: 1px solid var(--border-light);
        border-radius: var(--radius-md);
        margin: 0 var(--space-2);
        display: inline-block;
        transition: all 0.3s ease;
        background: var(--bg-secondary);
      }
      
      footer a:hover {
        border-color: var(--cyber-neon);
        color: var(--cyber-neon);
        box-shadow: 0 0 15px rgba(0, 255, 255, 0.3);
        transform: translateY(-2px);
      }
      
      /* Code blocks - Terminal Style */
      pre {
        background: var(--bg-code);
        color: var(--cyber-green);
        padding: var(--space-6);
        border-radius: var(--radius-lg);
        overflow-x: auto;
        margin: var(--space-6) 0;
        font-family: var(--font-mono);
        font-size: var(--font-size-sm);
        line-height: 1.5;
        border: 2px solid var(--border-dark);
        position: relative;
        box-shadow: inset 0 0 20px rgba(0, 0, 0, 0.5);
      }
      
      pre::before {
        content: '$ ';
        color: var(--cyber-neon);
        position: absolute;
        top: var(--space-4);
        left: var(--space-4);
        font-weight: var(--font-weight-bold);
      }
      
      code {
        font-family: var(--font-mono);
        font-size: var(--font-size-sm);
        background: var(--bg-tertiary);
        color: var(--cyber-purple);
        padding: var(--space-1) var(--space-2);
        border-radius: var(--radius-sm);
        border: 1px solid var(--border-light);
        font-weight: var(--font-weight-medium);
      }
      
      pre code {
        background: none;
        padding: 0;
        border: none;
        color: var(--cyber-green);
        font-weight: var(--font-weight-normal);
      }
      
      /* Artistic elements - Basquiat/Warhol inspired */
      .artistic-divider {
        height: 6px;
        background: linear-gradient(90deg, 
          var(--art-yellow) 0%, 
          var(--art-red) 25%, 
          var(--art-blue) 50%, 
          var(--cyber-neon) 75%, 
          var(--cyber-pink) 100%);
        margin: var(--space-12) 0;
        border: none;
        border-radius: var(--radius-full);
        position: relative;
        overflow: hidden;
      }
      
      .artistic-divider::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, 
          transparent, 
          rgba(255, 255, 255, 0.4), 
          transparent);
        animation: shine 2s infinite;
      }
      
      @keyframes shine {
        0% { left: -100%; }
        100% { left: 100%; }
      }
      
      /* Responsive design - Mobile-first cyberpunk */
      @media (max-width: 768px) {
        .container {
          padding: 0 var(--space-4);
        }
        
        header {
          padding: var(--space-6) 0;
        }
        
        .header-content {
          flex-direction: column;
          gap: var(--space-6);
          text-align: center;
        }
        
        .site-title {
          font-size: var(--font-size-2xl);
        }
        
        nav ul {
          gap: var(--space-4);
          flex-wrap: wrap;
          justify-content: center;
        }
        
        nav a {
          font-size: var(--font-size-xs);
          padding: var(--space-2) var(--space-3);
        }
        
        main {
          padding: var(--space-12) 0;
        }
        
        h1 {
          font-size: var(--font-size-4xl);
        }
        
        h1::before {
          left: -2rem;
          font-size: var(--font-size-base);
        }
        
        h2 {
          font-size: var(--font-size-2xl);
        }
        
        .post-title-single {
          font-size: var(--font-size-3xl);
        }
        
        .posts {
          grid-template-columns: 1fr;
          gap: var(--space-6);
        }
        
        .post-link {
          padding: var(--space-6);
        }
        
        footer a {
          display: block;
          margin: var(--space-2) 0;
        }
      }
      
      @media (max-width: 480px) {
        .container {
          padding: 0 var(--space-3);
        }
        
        .site-title {
          font-size: var(--font-size-xl);
        }
        
        nav ul {
          flex-direction: column;
          gap: var(--space-3);
        }
        
        h1 {
          font-size: var(--font-size-3xl);
        }
        
        h1::before {
          left: -1.5rem;
          font-size: var(--font-size-sm);
        }
        
        h2 {
          font-size: var(--font-size-xl);
        }
        
        .post-title {
          font-size: var(--font-size-lg);
        }
        
        .post-link {
          padding: var(--space-4);
        }
        
        pre {
          padding: var(--space-4);
          font-size: var(--font-size-xs);
        }
        
        pre::before {
          top: var(--space-3);
          left: var(--space-3);
        }
      }
    </style>
  </head>
  <body>
